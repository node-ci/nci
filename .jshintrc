{
    "node": true,
    "newcap": false,
    "supernew": false,
    "maxlen": 80,
    "smarttabs": true,
    "indent": 1,
    "globalstrict": true,
    "strict": true,
    // use es3 to get 'extra comma' at object literal error
    "es3": true,
    // suppress warnings about switches with just one case
    "onecase": true,
    "nonew": false,
    "trailing": true,
    "sub": false,
    "loopfunc": true,
    "boss": false,
    "lastsemic": false,
    "quotmark": "single",
    "undef": true,
    "immed": true,
    // allows ECMAScript 6 syntax (generators, etc)
    "esnext": true,
    // allow generators without a yield
    "noyield": true,
    "globals": {
        "describe": false,
        "it": false,
        "document": false,
        "before": false,
        "after": false
    }
}
